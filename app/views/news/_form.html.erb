<style>
  label {
    display: block;
  }
  select {
    height: 30px;
  }
</style>
<script src="//cdn.ckeditor.com/4.5.3/standard/ckeditor.js"></script>

<%= bootstrap_form_for @news, :html => { :multipart => true } do |f| %>
    <div class="row">
      <div class="col-md-12">
          <%= f.collection_select( :category_id, Category.all, :id, :name, label: "Categoría:")%>
          <%= f.text_field :title, required: true, label: "Título:" %>
          <hr>
          <%= f.file_field :image, label: "Agrega una imagen:" %>
          <br>
          <%= f.text_area :content, required: true, label: "Contenido:" %> <br>
          <%= f.text_field :author, required: true, label: "Nombre y apellidos del autor:" %>
          <%= f.text_area :about, required: true, label: "Sobre el autor:" %>
          <%= f.file_field :author_image, label: "Imagen del autor:" %>
          <br>
          <label for="radio">Destacada (aparecerá en la página principal):</label>
          <%= f.radio_button :highlight, true, label: "Sí", required: true %>
          <%= f.radio_button :highlight, false, label: "No", required: true %>
          <br>
          <%= f.submit form_submit, class: 'btn btn-submit' %>
      </div>
    </div>
<% end %>

<hr>

<%= link_to ' Atrás'.html_safe, :back , class: 'fa fa-arrow-left btn-edit' %>

<script type="text/javascript">
  $(document).ready(function(){
    CKEDITOR.replace( 'news[content]' );
  })
</script>
