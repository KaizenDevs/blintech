        <a class="next" id="testimonials_next" href="#"></a>
        <script>
          jQuery(document).ready(function($) {
            $('#testimonials').carouFredSel({
              next : "#testimonials_next",
              prev : "#testimonials_prev",
              infinite: false,
              items: 1,
              auto: false,
              scroll: {
                items : 1,
                fx: "crossfade",
