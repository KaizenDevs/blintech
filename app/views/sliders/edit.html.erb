<style>
  label {
    display: block;
  }
  select {
    height: 30px;
  }
</style>

<div style="height: 150px"></div>
<div class="container">
  <h1>Listado Slides</h1>
  <% if @slider.video != nil %>
    <iframe src="<%= @slider.video %>?byline=0&amp;portrait=0&amp;title=0" width="100" height="100" frameborder="0" webkitAllowFullScreen mozallowfullscreen allowFullScreen></iframe>
  <% else %>
    <%= image_tag @slider.image.url(:thumb) %>
  <% end %>

  <%= form_for(@slider) do |slider| %>
  <h3 class="right-line text-left">Editar Slide</h3>
  <p class="small">las imagenes deben ser de 1680 × 617</p>
  <br>
  <div class="field form-group">
    <%= slider.label :name, "Nombre del slide:", class: "lead lead-lg" %>
    <%= slider.text_field :name, class: "form-control" %>
  </div>
  <% if @slider.video != nil %>
    <div class="field form-group">
      <%= slider.label :video, "Video para blindaje:", class: "lead lead-lg" %>
      <%= slider.text_field :video, class: "form-control" %>
    </div>
  <% else %>
    <div class="field form-group">
      <%= slider.label :image, "Imagen para el slide:", class: "lead lead-lg" %>
      <%= slider.file_field :image, class: "form-control" %>
    </div>
  <% end %>

  <div class="actions form-group text-center">
    <%= slider.submit "Guardar Slide", class: "btn btn-submit" %>
  </div>
</div>
<% end %>
</div>
<div style="height: 150px"></div>
