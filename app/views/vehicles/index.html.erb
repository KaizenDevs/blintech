<div class="container" style="margin-top: 150px">
  <h1>Listando Vehículos</h1>
  <p>Recuerda crear marcas aquí antes de crear vehículos.</p>
  <%= link_to new_vehicle_path do %>
    <button class="btn-success" style="margin-bottom: 5px"><span class="fa fa-plus"> Nuevo Vehículo</span></button>
  <% end %>
  <table class="table">
    <tr>
      <th>Nombre</th>
      <th>Blindaje</th>
      <th>Primera Imagen</th>
      <th>Transmisión</th>
      <th>Combustible</th>
      <th>Transmisión</th>
      <th>Descripción</th>
      <th colspan="2"></th>
    </tr>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.name %></td>
        <td><%= vehicle.shielding %></td>
        <td><%= image_tag(vehicle.vehicle_images.first.image.url(:thumb), class: 'avatar', width: "50px") %></td>
        <td><%= vehicle.transmission.capitalize %></td>
        <td><%= vehicle.gas.capitalize %></td>
        <td><%= vehicle.engine %></td>
        <td><%= vehicle.description %></td>
        <td><%= link_to "<span class='fa fa-pencil'></span>".html_safe, edit_vehicle_path(vehicle) %></td>
        <td><%= link_to "<span class='fa fa-trash'></span>".html_safe, vehicle_path(vehicle), method: :delete, data: { confirm: '¿Esta seguro que desea eliminar esta pregunta?' } %></td>
      </tr>
    <% end %>
  </table>
</div>